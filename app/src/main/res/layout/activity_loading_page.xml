<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.LoadingActivity"
    android:background="#CD0808"
    android:orientation="vertical">

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="70sp"
        android:src="@drawable/findtell"></ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need something and you donâ€™t know where to find it"
            android:gravity="center_horizontal|top"
            android:textColor="@color/white"
            android:fontFamily="@font/robotoslab"
            android:textStyle="italic|bold"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="50sp"
            android:textSize="25sp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FT is here to help you !"
            android:gravity="center_horizontal|top"
            android:textColor="@color/white"
            android:fontFamily="@font/robotoslab"
            android:textStyle="italic|bold"
            android:layout_marginLeft="70sp"
            android:textSize="25sp"></TextView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

</LinearLayout>